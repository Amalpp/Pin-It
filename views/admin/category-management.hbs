<body>
    





<section  class="main-content">
    <div class="page-content">
      <a href="/add-category" type="button " style="width: 14em; background-color: rgb(236, 236, 14);  " class="  form-control form-control-sm   float-end"  placeholder="button" aria-controls="example " > Add category</a>
        {{!-- <a href="/add-product" type="button " style="width: 14em; background-color: rgb(231, 231, 228);  " class="  form-control form-control-sm   float-end"  placeholder="button" aria-controls="example " > Add Product</a> --}}
       
<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>Categoy Name</th>
              
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
                {{#each category}}
            <tr>
                <td>{{@index}}</td>
                <td>{{this.category}}</td>
                
                
                <td><a href="/edit-category/{{this._id}}" style="color: white; " ><button type="button" class="btn btn-primary">EDIT</a> </button></td>  
    <td><a href="/delete-category/{{this._id}}" style="color:rgb(255, 255, 255);"onclick="return confirm('Are you sure you want to delete this user');"><button type="button" class="btn btn-danger">DELETE</a> </button></button></td>  
                
            </tr>
        {{/each}}
        </tbody>
        
    </table>


</section>
</body>
 <script>

     $(document).ready(function() {
    $('#example').DataTable();
} );
 </script>
</html>