<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.5.1.js" ></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js" ></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" ></script>
    <script src="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" ></script>
    
</head>
<body>
    <section class="main-content">
        <div class="page-content " >

    <table style="background-color: rgb(203, 203, 216);" id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>NO</th>
               
                <th>Order Id</th>
                <th>Date</th>
                <th>Payment Method</th>
                <th>Price</th>
                 <th>status</th>
               

               
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
       
            <tr>
                <td>{{@index}}</td>
                <td>{{this._id}}</td>
                <td>{{this.date}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>{{this.totalAmount}}</td>
                <td>
               
     <form action="/order-management" method="post">
     <input name="orderId" type="text" value="{{this._id}}" hidden>
               <select name="name"  style="color: rgb(18, 20, 18);" id="cars">
               <option value="{{this.status}}" >{{this.status}}</option>
               <option value="shippped">shippped</option>
               <option value="confirm">confirm</option>
               <option value="cancel">cancel</option> 
             
               </div>
               
                <input type="submit">
</form>
                 </td>
                
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>NO</th>
                
                <th>Order Id</th>
                <th>Date</th>
                <th>Payment Method</th>
                <th>Price</th>
                 <th>status</th>
               
            </tr>
        </tfoot>
    </table>
    </div>
    </section>
</body>
<script>
    $(document).ready(function() {
    $('#example').DataTable();
} );
</script>

</html>