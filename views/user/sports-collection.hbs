		function addToCart(proId){
			console.log("jofsad")
    $.ajax ({
        url:'/add-to-cart/'+proId,
        method:'GET',
        success:(response)=>{
            if(response.status){
                let count=$('#cart-count').html()
                count=parseInt(response.cartCount)
                $("#cart-count").html(count)
            }
           
        }
    })
}
	</script>