



<section  class="main-content">
    <div class="page-content">
   
       
<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>Date</th>
                <th>Address</th>
                <th>Pincode</th>
                <th>mobile</th>
                <th>Total Amount</th>
                <th>status</th>
                <th>View Products</th>
                
            </tr>
        </thead>
        <tbody>
                {{#each orders}}
            <tr>
                <td>{{@index}}</td>
                <td>{{this.date}}</td>
                <td>{{this.deliveryDetails.address}}</td>
                <td>{{this.deliveryDetails.pincode}}</td>
                <td>{{this.deliveryDetails.mobile}}</td>
                <td>{{this.totalAmount}}</td>
                <td>{{this.status}}</td>
             
               
                <td><a href="/view-order-products/{{this._id}}" class="btn btn-primary" type="submit">view Products</a></td>
                
            </tr>
        {{/each}}
        </tbody>
        
    </table>


</section>
</body>
 <script>

     $(document).ready(function() {
    $('#example').DataTable();
} );
 </script>
