  <script>

      $(document).ready(function () {

        $("#user-signup").validate({
          rules: {
            username: {
              required: true,
              minlength: 3
            },
            email: {
              required: true,
              email: true
            },
            mobile: {
              required: true,
              Number: true,
              maxlength: 10
            },
            password: {
              required: true,
              minlength: 5
            }

          }
        });
      });


       
  </script>
</body>

